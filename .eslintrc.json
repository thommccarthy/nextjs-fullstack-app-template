{
  "extends": [
    "plugin:storybook/reccomended",
    "next",
    "next/core-web-vitals",
    "eslint:recommended"
  ],
  "globals": {
    "React": "readonly"
  },
  "rules": {
    "no-unused-vars": [1, { "args": "after-used", "argsIgnorePattern": "^_" }]
  },
  "overrides": [
    {
      "files": ["*.stories.@(js|jsx|ts|tsx)"],
      "rules": {
        "storybook/heirarchy-separator": "error"
      }
    }
  ]
}
